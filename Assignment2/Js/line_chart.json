{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A trellis bar chart showing the Deaths / 100 Cases and recovered / 100 Cases .",
    "data": { "url": "https://raw.githubusercontent.com/YongChangFu/Assignment2/main/Assignment2/Data/country_wise_latest.csv"},
    "transform": [
      {"filter": "datum.year == 2000"},
      {"calculate": "datum.sex == 2 ? 'Female' : 'Male'", "as": "gender"}
    ],
    "width": {"step": 17},
    "mark": "bar",
    "encoding": {
      "row": {"field": "gender"},
      "y": {
        "aggregate": "sum", "field": "people",
        "title": "population"
      },
      "x": {"field": "age"},
      "color": {
        "field": "gender",
        "scale": {"range": ["#675193", "#ca8861"]}
      }
    }
  }